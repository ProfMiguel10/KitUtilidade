using System;
using System.Threading;
class Program
{
    static void Main()
    {
        for (int i = 100; i > 0; i--)
        {
            Console.Clear();
            Console.WriteLine($"Contagem Regressiva: {i} segundos");
            Thread.Sleep(1000);  
        }
        Console.WriteLine("Acabou!");
    }
}
