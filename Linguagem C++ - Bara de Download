#include <iostream>
#include <chrono>
#include <thread>

int main() {
    const int car = 30; 

    std::cout << "Download:\n";
    for (int i = 0; i <= car; ++i) {
        std::cout << "[";
        for (int j = 0; j < car; ++j) {
            if (j < i)
                std::cout << "="; 
            else
                std::cout << " "; 
        }
        std::cout << "] " << (i * 100) / car << "%\r";
        std::cout.flush();
        std::this_thread::sleep_for(std::chrono::milliseconds(100)); 
    }
    std::cout << "\nConcluÃ­do!\n";
    return 0;
}
